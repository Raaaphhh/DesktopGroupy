<UserControl x:Class="DesktopGroupyV1.Views.ControlUser.GestionCE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopGroupyV1.Views.ControlUser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    
    <Grid>
        <TextBlock Text="Informations/Liste préventes" TextAlignment="Center" />
        <Button x:Name="Historique" Content="Historique" Height="20" Width="100" Margin="690,34,10,396"/>
        <DataGrid x:Name="ListePrevente" ItemsSource="{Binding ListePrevente}" Width="500" Height="400">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Prévente" Binding="{Binding IdPrevente}" Width="*"/>
                <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}" Width="*"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
