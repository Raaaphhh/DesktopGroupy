<UserControl x:Class="DesktopGroupyV1.Views.ControlUser.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopGroupyV1.Views.ControlUser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/> 
            <ColumnDefinition Width="*"/>  
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF2D2D30">
            <StackPanel>
                <TextBlock Text="Menu" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="10" />
                <ListBox x:Name="NavBarMenu" Background="#FF2D2D30" Foreground="White" BorderThickness="0">
                    <ListBoxItem Content="Dashboard" Padding="10" />
                    <ListBoxItem Content="KPIs" Padding="10" />
                    <ListBoxItem Content="Rapports" Padding="10" />
                    <ListBoxItem Content="Paramètres" Padding="10" />
                    <ListBoxItem Content="Aide" Padding="10" />
                </ListBox>
            </StackPanel>
        </Border>

        <ContentControl x:Name="ContentArea" Grid.Column="1" Background="White"/>
    </Grid>
</UserControl>
