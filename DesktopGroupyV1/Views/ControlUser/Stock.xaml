<UserControl x:Class="DesktopGroupyV1.Views.ControlUser.Stock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopGroupyV1.Views.ControlUser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>  

        <TextBlock Text="Liste des produits et stocks" 
                   TextAlignment="Center" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,10,0,20" 
                   Grid.Row="0" />

        <DataGrid x:Name="ListeProduitsStocks" 
                  ItemsSource="{Binding ListeProduitsStocks}" 
                  Grid.Row="1">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Référence" Binding="{Binding Reference}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding }" Width="*"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding }" Width="*"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding }" Width="*"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding }" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>