<Window x:Class="DesktopGroupyV1.Views.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopGroupyV1.Views"
        xmlns:uc="clr-namespace:DesktopGroupyV1.Views.ControlUser"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <uc:NavBar Grid.Column="0"></uc:NavBar>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <uc:Header Grid.Row="0"></uc:Header>

            <ContentControl x:Name="ContentArea" Grid.Row="1"></ContentControl>

        </Grid>
    </Grid>
</Window>
