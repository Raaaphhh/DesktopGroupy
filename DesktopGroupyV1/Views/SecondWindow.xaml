<Window x:Class="DesktopGroupyV1.Views.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopGroupyV1.Views" xmlns:local1="clr-namespace:DesktopGroupyV1.Views.ControlUser"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--// Mettre la navbar dans la première colonne et pas un usercontrol-->
        <!--<uc:NavBar Grid.Column="0" />-->

        <Grid Grid.Column="0">
            <Border Grid.Column="0" Background="#FF2D2D30">
                <StackPanel>
                    <TextBlock Text="Menu" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="10" />
                    <ListBox x:Name="NavBarMenu" Background="#FF2D2D30" Foreground="White" BorderThickness="0">
                        <Button Content="Dashboard"
                                Click="OpenDashboard"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                BorderThickness="0" 
                                Padding="5" 
                                Cursor="Hand" 
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Stock"
                                Click="OpenStockView"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                BorderThickness="0" 
                                Padding="5" 
                                Cursor="Hand" 
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Messages"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                Padding="5"
                                BorderThickness="0" 
                                Cursor="Hand" 
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Commandes"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                Padding="4"
                                BorderThickness="0" 
                                Cursor="Hand" 
                                Click="OpenCommande"
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Historique"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                Padding="4"
                                BorderThickness="0" 
                                Cursor="Hand" 
                                Click="OpenHistorique"
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Expeditions"
                                Background="#FF3A3A3F" 
                                Foreground="White" 
                                FontSize="14" 
                                Margin="5" 
                                Padding="4"
                                BorderThickness="0" 
                                Cursor="Hand" 
                                Click="OpenExpedition"
                                Style="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4E4E52"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Resources>
                        </Button>



                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/> 
            </Grid.RowDefinitions>

            <local1:Header Grid.Row="0" />

            <ContentControl x:Name="ContentArea" Grid.Row="1"></ContentControl>

        </Grid>
    </Grid>
</Window>
